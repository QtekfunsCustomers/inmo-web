---
// src/pages/contacto.astro
import Layout from "../layouts/Layout.astro";
//https://formspree.io/f/xjkojkvr
---

<Layout title="Contacto">
  <div class="bg-white py-20">
    <div class="container mx-auto px-4 max-w-2xl">

      <div class="text-center mb-12">
        <h1 class="text-5xl font-bold text-slate-900">Hablemos</h1>
        <p class="text-lg text-slate-500 mt-4">Complete el formulario y nuestro equipo se pondr√° en contacto con usted.</p>
      </div>

      <form
        action="https://formspree.io/f/xjkojkvr"
        method="POST"
        class="space-y-6"
      >
        <input type="hidden" name="_next" value="https://inmo-web.netlify.app/gracias">

        <div>
          <label for="name" class="sr-only">Nombre Completo</label>
          <input type="text" name="name" id="name" placeholder="Nombre Completo" required class="w-full p-4 border border-slate-300 rounded-md focus:ring-2 focus:ring-blue-500 transition">
        </div>

        <div>
          <label for="email" class="sr-only">Email</label>
          <input type="email" name="email" id="email" placeholder="Email" required class="w-full p-4 border border-slate-300 rounded-md focus:ring-2 focus:ring-blue-500 transition">
        </div>

        <div>
          <label for="message" class="sr-only">Mensaje</label>
          <textarea name="message" id="message" rows="6" placeholder="Su mensaje..." required class="w-full p-4 border border-slate-300 rounded-md focus:ring-2 focus:ring-blue-500 transition"></textarea>
        </div>

        <div class="text-center">
          <button type="submit" class="bg-amber-500 hover:bg-amber-600 text-slate-900 font-bold py-3 px-12 rounded-full text-lg transition-transform duration-300 hover:scale-105">
            Enviar
          </button>
        </div>
      </form>

    </div>
  </div>
</Layout>