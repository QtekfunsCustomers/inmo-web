---
//  archivo: src/layouts/Layout.astro

// üëá F√≠jate que la ruta coincide con tu estructura de carpetas
import "../styles/global.css";

// Esto permite que cada p√°gina tenga un t√≠tulo diferente
export interface Props {
    title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Sitio web de Inmobiliaria INMO-WEB" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>{title} | INMO-WEB</title>

        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Poppins:wght@700&family=Inter:wght@400;600&display=swap"
            rel="stylesheet"
        />

        <style>
            /* Opcional: Asigna las fuentes a todo el sitio por defecto */
            body {
                font-family: "Inter", sans-serif;
            }
            h1,
            h2,
            h3,
            h4,
            h5,
            h6 {
                font-family: "Poppins", sans-serif;
            }
        </style>
    </head>
    <body class="bg-slate-100 text-gray-800">
        <header class="bg-white shadow-md sticky top-0">
            <nav
                class="container mx-auto px-4 py-3 flex justify-between items-center"
            >
                <a href="/">
                    <img
                        src="/images/logoInmospainWeb.png"
                        alt="Logo de Inmo-Web"
                        class="h-10 w-auto"
                    />
                </a>
                <div>
                    <a href="/" class="px-3 hover:text-blue-700">Inicio</a>
                    <a href="/contacto" class="px-3 hover:text-blue-700"
                        >Contacto</a
                    >
                </div>
            </nav>
        </header>

        <slot />
        {/* Aqu√≠ se insertar√° el contenido de cada p√°gina */}
        <footer class="bg-slate-900 text-slate-400">
            <div class="container mx-auto px-4 py-8">
                <div
                    class="flex flex-col md:flex-row justify-between items-center text-center md:text-left gap-4"
                >
                    {/* Copyright */}
                    <p class="text-sm">
                        &copy; {new Date().getFullYear()} Inmospain Servicios Inmobiliarios
                        S.L. Todos los derechos reservados.
                    </p>

                    {/* Enlaces a Pol√≠ticas */}
                    <nav>
                        <ul class="flex gap-4 md:gap-6 text-sm">
                            <li>
                                <a
                                    href="/politica-de-privacidad"
                                    class="hover:text-white transition-colors"
                                    >Pol√≠tica de Privacidad</a>
                            </li>
                            <li>
                                <a
                                    href="/aviso-legal"
                                    class="hover:text-white transition-colors"
                                    >Aviso Legal</a>
                            </li>
                            <li>
                                <a
                                    href="/politica-de-cookies"
                                    class="hover:text-white transition-colors"
                                    >Pol√≠tica de Cookies</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </footer>
    </body>
</html>
