---
// src/components/LeadForm.astro
---
<div class="bg-slate-100 p-8 rounded-lg border border-slate-200">
  <h3 class="text-2xl font-bold text-slate-900 mb-1">Contacta con Nosotros</h3>
  <p class="text-slate-600 mb-6">Nos encargamos de todo.</p>

  <form
    name="contacto-principal"
    method="POST"
    action="/gracias"
    data-netlify="true"
    data-netlify-honeypot="bot-field"
  >
    {/* Campo oculto para el nombre del formulario, requerido por Netlify */}
    <input type="hidden" name="form-name" value="contacto-principal" />

    {/* Campo "honeypot" para engañar a los bots de spam */}
    <p class="hidden">
      <label>
        No rellenes esto si eres humano: <input name="bot-field" />
      </label>
    </p>

    {/* --- Campos Visibles del Formulario --- */}
    <div class="space-y-4">
      <div>
        <label for="lead-name" class="text-sm font-semibold text-slate-700">Nombre y Apellidos*</label>
        <input type="text" id="lead-name" name="name" required class="w-full mt-1 p-3 border border-slate-300 rounded-md focus:ring-2 focus:ring-blue-500">
      </div>

      <div>
        <label for="lead-email" class="text-sm font-semibold text-slate-700">Email*</label>
        <input type="email" id="lead-email" name="email" required class="w-full mt-1 p-3 border border-slate-300 rounded-md focus:ring-2 focus:ring-blue-500">
      </div>

      <div>
        <label for="lead-phone" class="text-sm font-semibold text-slate-700">Teléfono</label>
        <input type="tel" id="lead-phone" name="phone" placeholder="Opcional" class="w-full mt-1 p-3 border border-slate-300 rounded-md focus:ring-2 focus:ring-blue-500">
      </div>

      <div>
        <label for="lead-message" class="text-sm font-semibold text-slate-700">Mensaje*</label>
        <textarea id="lead-message" name="message" rows="4" required class="w-full mt-1 p-3 border border-slate-300 rounded-md focus:ring-2 focus:ring-blue-500"></textarea>
      </div>

      <div class="pt-2">
        <button type="submit" class="w-full bg-amber-500 hover:bg-amber-600 text-slate-900 font-bold p-3 rounded-md text-lg">
          Infórmate ahora &rarr;
        </button>
      </div>
    </div>
  </form>
</div>